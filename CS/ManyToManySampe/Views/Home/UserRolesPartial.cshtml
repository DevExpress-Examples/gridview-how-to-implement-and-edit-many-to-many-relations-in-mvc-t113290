@{
    var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "UserRoles";
        settings.CallbackRouteValues = new { Controller = "Home", Action = "UserRolesPartial" };
        settings.Settings.ShowTitlePanel=true;
        settings.SetTitlePanelTemplateContent("User's Roles");
        settings.KeyFieldName = "RoleID";
        settings.Columns.Add("RoleID");
        settings.Columns.Add("RoleName");
       
    });
}
@grid.Bind(ViewData["UserRoles"]).GetHtml()
@{
    var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "Users";
        settings.CallbackRouteValues = new { Controller = "Home", Action = "UsersGridViewPartial" };
        settings.SettingsBehavior.AllowFocusedRow = true;
        settings.Settings.ShowTitlePanel = true;
        settings.SetTitlePanelTemplateContent("Users");
        settings.KeyFieldName = "UserID";
        settings.Columns.Add("UserID");
        settings.Columns.Add("UserName");
        settings.ClientSideEvents.FocusedRowChanged = "onFocusedRowChanged";

    });
}
@grid.Bind(Model).GetHtml()